{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "baseUrl": "./",
        "rootDir": "./",
        "sourceMap": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "resolveJsonModule": true,
    },
    "exclude": [
        "**/node_modules/**"
    ],
    "include": [
        "src/**/*"
    ]
}